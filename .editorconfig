; This file is for unifying the coding style for different editors and IDEs.
; More information at https://editorconfig.org

root = true

[*]
quote_type = double
charset = utf-8
tab_width = 4
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.php]
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true
